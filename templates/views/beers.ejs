<head>
  <div class="title">
      <title>Beer</title>
  </div>
  <% include ./partials/head %>
</head>

<body>
<div class="container-fluid">
  <header>
    <% include ./partials/header %>
  <div class="row">
    <h2 align="center">Featured Beers</h2>
  </div>
</header>

  <div class="col-md-12" align="center">
    <% data.featuredBeers.forEach(function(featuredBeer, index){ %>
      <% if (index%2 == 0){ %>
        <div class="col-md-12" align="center">
      <% } %>
    <% if (featuredBeer.beerImage.url){ %>
      <div class="col-md-6" align="center">
        <a href="/beerProfile/<%= featuredBeer.slug%>">
          <img src="<%= featuredBeer.beerImage.url%>" class="img-thumbnail">
          <br>
          <%= featuredBeer.beerName%>
        </a>
      </div>
      <% } else { %>
        <div class="col-md-6" align="center">
          <a href="/beerProfile/<%= featuredBeer.slug%>">
            <img src="https://s3.amazonaws.com/upload.uxpin/files/193825/198806/Beer_0000_Layer-Comp-1.png" class="img-thumbnail">
            <br>
            <%= featuredBeer.beerName %>
          </a>
        </div>
      <% } %>
      <% if (index%2 != 0){ %>
        </div>
      <% } %>
    <% }) %>
  </div>

  <div class="row">
    <h2 align="center">All Beers</h2>
  </div>

  <div class="col-md-12" align="center">
    <% data.allBeers.forEach(function(beer, index){ %>
      <% if (index%6 == 0){ %>
    <div class="col-md-12" align="center">
      <% } %>
      <a href="/beerProfile/<%= beer.slug%>">
        <% if (beer.beerImage.url){ %>
        <div class="col-md-2" align="center">
          <img src="<%= beer.beerImage.url%>" class="img-thumbnail"><br>
          <%= beer.beerName%>
        </div>
      </a>
      <% } else { %>
      <div class="col-md-2" align="center">
        <a href="/beerProfile/<%= beer.slug%>">
          <img src="https://s3.amazonaws.com/upload.uxpin/files/193825/198806/Beer_0000_Layer-Comp-1.png" class="img-thumbnail">
          <br>
          <%= beer.beerName%>
        </a>
      </div>
      <% } %>
      <% if ((index+1)%6 == 0) { %>
    </div>

    <% } %>
    <% }) %>
  </div>

  <div class="col-md-12" align="center">
    <div class="container">
      <p>Featured beers</p>
      <button class="btn btn-primary">Try these beers</button>
    </div>
  </div>

</div>
<footer>
  <% include ./partials/footer %>
  </footer>

</body>



