<!doctype html>
<html>

<head>
  <div class="title">
    <title>Noble Brewer Blog - All things craft beer and homebrewing related</title>
  </div>
  <% include ./partials/head %>
</head>

<div class="container-fluid">
	<% include ./partials/header %>
		<div class="row">
			<div class="col-sm-12 col-md-12 patterned-blog">
				<div class="row">
					<h3>Featured Articles</h3>
					<% locals.data.featuredPosts.forEach(function(post, index){ %>
						<div class="row top-buffer-thin">
							<div class="col-md-5 col-sm-6">
								<a href="/blog/post/<%= post.slug %>"><img class="img-responsive centered-block" src="<%= post.image.url %>">
							</div>
							<div class="col-md-7 col-sm-6">
								<h4 class="gold"><%= post.title %></h4></a>
								<%- post.content.brief %>
							</div>
						</div>
					<% }) %>
				</div>
				<div class="row">
					<h3>Other Articles</h3>
					<% locals.data.posts.forEach(function(post, index){ %>
						<% if ((index+1)%3 === 0){ %>
							<div class="row">
						<% } %>
						<div class="col-md-4 col-sm-4 centered-block">
							<a href="/blog/post/<%= post.slug %>"><img class="img-responsive" src="<%= post.image.url %>">
							<h5 style="text-transform:uppercase"><%= post.title %></h5></a>
						</div>	
						<% if ((index+1)%3 === 0) { %>
							</div>
						<% } else if (index+1 === locals.data.posts.length) { %>	
							</div>
						<% } %> 		
					<% }) %>
				</div>
			</div>
		</div>
	<% include ./partials/footer %>
</div>
</html>
