<head>
  <div class="title">
    <title>Blog</title>
  </div>
  <% include ./partials/head %>
</head>

<% include ./partials/header %>
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
				<div class="row">
					<h4>Featured Articles</h4>
					<% locals.data.featuredPosts.forEach(function(post, index){ %>
						<div class="col-md-6 centered-block">
							<a href="/blog/post/<%= post.slug %>"><img class="img-responsive" src="<%= post.image.url %>">
							<p><%= post.title %></p></a>
						</div>
					<% }) %>
				</div>
				<div class="row">
					<h4>Other Articles</h4>
					<% locals.data.posts.forEach(function(post, index){ %>
						<div class="col-md-3 centered-block">
							<a href="/blog/post/<%= post.slug %>"><img class="img-responsive" src="<%= post.image.url %>">
							<p><%= post.title %></p></a>
						</div>				
					<% }) %>
				</div>
			</div>
		</div>
	</div>
<!-- views/partials/emailFooter.ejs -->
<section class="row light-striped">
	<div class="col-sm-8 col-sm-offset-2 text-center">
		<!-- <h2>Stay in the know</h2> -->
		<h4>We love talking about craft beer.</h4><h4>Be part of the conversation.</h4>
		<form class="form-inline top-buffer" id="email-signup">
			<div class="form-group">
				<input type="email" size="35" class="form-control" id="email" placeholder="EMAIL ADDRESS">
			</div>
			<button type="submit" id="signup-blog" class="btn btn-nb auto-height">SIGN UP</button>
		</form>
	</div>
</section>

<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<script src="/javascripts/sendToMailchimp.js"></script>
<% include ./partials/footer %>